<project name="RDF2Subdue" default="" basedir=".">
    <description>
        RDF to Subdue parser.
    </description>
    
    <property name="basedir" location="."/>
    <property name="lib" location="lib"/>
    <property name="src" location="src"/>
    <property name="bin" location="bin"/>
    <property name="dist" location="dist"/>
    <property name="tdb" location="tdb"/>
    
    <property name="properties" value="config.properties"/>
    
    <path id="build.classpath">
  		<fileset dir="lib">
    		<include name="**/*.jar"/>
  		</fileset>
	</path>
    
    <manifestclasspath property="lib.list" jarfile=".">
		<classpath refid="build.classpath" />
	</manifestclasspath>
    
    <target name="init">
        <mkdir dir="${bin}"/>
    </target>
    
    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${bin}" includeantruntime="False">
            <classpath refid="build.classpath"/>
        </javac>
    </target>
    
    <target name="clean">
        <delete dir="${bin}" />
        <delete dir="${dist}" />
        <delete dir="${tdb}" />
    </target>
    
    <target name="dist" depends="compile">
        <mkdir dir="${dist}"/>
        <jar jarfile="${dist}/RDF2Subdue.jar" basedir="${bin}">
            <manifest>
                <attribute name="Main-Class" value="eu.deustotech.rdf2subdue.main.RDF2Subdue"/>
                <attribute name="Class-Path" value="${lib.list}"/>
            </manifest>
        </jar>
    </target>
    
    <target name="run" depends="dist">
        <mkdir dir="${tdb}"/>
		<java jar="${dist}/RDF2Subdue.jar" fork="True">
		    <arg value="${properties}" />
		</java>
    </target>
    
</project>